<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/treasure_map"
    android:backgroundTint = "#9986D7DD"
    android:backgroundTintMode="screen"
    android:orientation="vertical"
    tools:context=".LevelSelect">

    <ImageButton
        android:id="@+id/levelPrevious"
        android:contentDescription="@string/descBack"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:background="#6603DAC5"
        android:padding="0dp"/>

    <Button
        android:id="@+id/level_1_button"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_below = "@id/level_menu_title"
        android:layout_centerHorizontal = "true"
        android:text="@string/level_1"
        android:background="#BF03DAC5" />

    <Button
        android:id="@+id/level_2_button"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_below = "@id/level_1_button"
        android:layout_centerHorizontal = "true"
        android:layout_marginTop="15dp"
        android:text="@string/level_2"
        android:background="#BF03DAC5" />

    <Button
        android:id="@+id/level_3_button"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_below = "@id/level_2_button"
        android:layout_centerHorizontal = "true"
        android:layout_marginTop="15dp"
        android:text="@string/level_3"
        android:background="#BF03DAC5" />

    <TextView
        android:id="@+id/level_menu_title"
        android:layout_width="218dp"
        android:layout_height="83dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/level_select"
        android:layout_centerHorizontal = "true"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="30dp"
        android:textStyle="italic" />



</RelativeLayout>